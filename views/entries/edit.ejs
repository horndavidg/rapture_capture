<% include ../partials/headerUser %>




<h1 class="lp_h1">You made it to the EDIT ENTRIES PAGE!</h1>
<br>

<h2 class="ui dividing header" id="indent">Edit this Journal Entry for <%= entry.place.name%>!</h2>
  
  <form action="/entries/<%= entry._id%>%>?_method=put" method="POST" id="newForm">  


  <div class="ui form">
    <div class="ui info message">
      <div class="header">Make any changes needed to this Journal Entry but remember, it must always have a Title and Entry.</div>
    </div>

    <div class="fields">
      <div class="six wide field">
      <div class="required field">
        <label>Title:</label>
        <input type="text" name="entry[name]" value=<%= entry.name%> autofocus>
      </div>
      </div>
      <div class="four wide field">
        <label>Date this Entry:</label>
        <input type="date" name="entry[date]" value=<%= entry.date%>>
      </div>
       </div>
       
        <% if(err) { %>
        <h4><font color="red"><%= err%></font></h4>
        <% } %>


       <div class="fields">
       <div class="eight wide field">
       <div class="required field">
          <label>Entry: </label>
    <textarea name="entry[body]" rows="4" cols="30" ><%= entry.body%></textarea>
      </div>
      </div>
      </div>

       <div class="fields">
		<div class="four wide field">
        <label>Image 1:</label>
        <input value=<%= entry.image[0]%> type="text" name="entry[[image]]">
      </div>
      <div class="four wide field">
        <label>Image 2:</label>
        <input value=<%= entry.image[0]%> type="text" name="entry[[image]]">
      </div>
       <div class="four wide field">
        <label>Image 3:</label>
        <input value=<%= entry.image[0]%> type="text" name="entry[[image]]">
      </div>
	</div>
    
   <div>
       <input type="submit" value="Update" class="ui primary button">
  </div>
  </div>
  </form>
  <br>
  <a href="/places/<%= entry.place._id%>" id="indent">Go to Vacation Page</a>
  <br>
  <br>
  <a href="/places/<%= entry.place._id%>/entries" id="indent">See all Journal Entries</a>




<% include ../partials/footer %>