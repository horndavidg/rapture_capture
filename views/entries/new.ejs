<% include ../partials/headerUserUC %>

<br>

<h2 class="ui dividing header" id="indent"><span class="white">Make a New Journal Entry for <%= place.name%></span></h2>
  
  <form action="/places/<%= place._id%>/entries" method="POST" id="newForm">  


  <div class="ui form">
    <div class="ui info message">
      <div class="header">Use Journal Entries to help track and remember all those amazing things that you did each day!</div>
      <ul class="list">
        <li>Please make sure that you fill in a Title and Entry</li>
      </ul>
    </div>

    <div class="fields">
      <div class="six wide field">
      <div class="required field">
        <label><span class="white">Title:</span></label>
        <input placeholder="Title this Journal Entry" type="text" name="entry[name]" autofocus>
      </div>
      </div>
      <div class="four wide field">
        <label><span class="white">Date this Entry:</span></label>
        <input type="date" name="entry[date]">
      </div>
       </div>
       
        <% if(err) { %>
        <h4><font color="red"><%= err%></font></h4>
        <% } %>


       <div class="fields">
       <div class="eight wide field">
       <div class="required field">
          <label><span class="white">Entry: </span></label>
    <textarea name="entry[body]" rows="4" cols="30"></textarea>
      </div>
      </div>
      </div>
<br>
       <div class="fields">
		<div class="four wide field">
        <label><span class="white">Image 1:</span></label>
          <!--  Brings in the Upload Care uploader widget -->
          <br>
          <input type="hidden" role="uploadcare-uploader" name="entry[[image]]" />
        <!-- <input placeholder="URL Please" type="text" name="entry[[image]]"> -->
      </div>
      <div class="four wide field">
        <label><span class="white">Image 2:</span></label>
          <br>
          <input type="hidden" role="uploadcare-uploader" name="entry[[image]]" />
     <!--    <input placeholder="URL Please" type="text" name="entry[[image]]"> -->
      </div>
       <div class="four wide field">
        <label><span class="white">Image 3:</span></label>
         <br>
          <input type="hidden" role="uploadcare-uploader" name="entry[[image]]" />
      <!--   <input placeholder="URL Please" type="text" name="entry[[image]]"> -->
      </div>
	</div>
    <br>
   <div>
       <input type="submit" value="Write It" class="ui green button">
  </div>
  </div>
  </form>
  <br>
  <a href="/places/<%= place._id%>" class="white" id="indent">Go to Vacation Page</a>
  <br>
  <br>
  <a href="/places/<%= place._id%>/entries" class="white" id="indent">See all Journal Entries</a>




